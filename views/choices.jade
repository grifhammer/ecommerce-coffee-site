extends layout

block content
        #nav-wrap
            .container
                ul.signup-progress
                    li
                        a(href='/').welcome 1. Welcome
                    li.active
                        a(href='/choices').options 2. Options
                    li
                        a(href='/delivery').delivery 3. Delivery
                    li
                        a(href='/payment').payment 4. Payment
        #choices.container
            #plan-wrapper
                h1#choices-header Tell us what you want!
                h2#choices-subheader Shipping is free and you can skip any week
                form(name="choices-form", action="/delivery", method="post")
                    #choices-frequency.choice-block
                        .row
                            .choices-image.col-sm-6
                                image(src="../images/calendar.png")
                            .choices-text.col-sm-6
                                h2.choices-label 1.Frequency
                                .choices-lower-text-wrapper
                                    .choices-lower-text How often would you like us to send you your coffee
                                    select#frequency.form-control(name="frequency")
                                        option(value="weekly") Weekly
                                        option(value="biweekly") Every Two Weeks
                                        option(value="monthly") Montly
                                        option(value="quarterly") Quarterly
                                        option(value="semianually") Semi-Anually
                                        option(value="anually") Annually
                                    .choices-help-text You can cancel anytime. You can skip anytime.
                    #choices-quantity.choice-block
                        .row
                            .choices-image.col-sm-6
                                image(src="../images/food-scale.png")
                            .choices-text.col-sm-6
                                h2.choices-label 2. Quantity
                                .choices-lower-text-wrapper
                                    .choices-lower-text How many pounds (in increments of .25 lb) would you like each delivery?
                                    input.form-control(type="number", name="quarterPounds", min="0",step="0.25", placeholder="20")
                                    .choices-help-text You can cancel anytime. You can skip anytime.
                    #choices-grind.choice-block
                        .row
                            .choices-image.col-sm-6
                                image(src="../images/beans.png")
                            .choices-text.col-sm-6
                                h2.choices-label 1. Grind Type
                                .choices-lower-text-wrapper
                                    .choices-lower-text How do you like your grinds?
                                    select#grind.form-control(name="grind")
                                        option(value="extraCourse") Extra Course
                                        option(value="course") Course
                                        option(value="medCourse") Medium Course
                                        option(value="fine") Fine
                                        option(value="veryFine") Very Fine
                                    .choices-help-text You can cancel anytime. You can skip anytime.
                    #submit-btn-wrap
                        input#submit-btn.btn.btn-primary.btn-lg(type="submit", name="submit")