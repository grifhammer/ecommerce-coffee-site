extends layout

block content
    #account.container
        #account-wrapper
            h1 Your account information
            #information-wrap
                .section-wrap.row
                    .section-header-wrap.col-sm-12
                        h2 Choices
                        a(href='/choices') (Edit)
                    .choice
                        p.col-sm-3 Grind:
                        p.col-sm-9 #{grind ? grind : 'none'}
                    .choice
                        p.col-sm-3 Freqency of Delivery:
                        p.col-sm-9 #{frequency ? grind : 'none'}
                    .choice
                        p.col-sm-3 Coffee, in Pounds:
                        p.col-sm-9 #{pounds ? grind : 'none'}
                .section-wrap.row
                    .section-header-wrap.col-sm-12
                        h2 Delivery Information
                        a(href='/delivery') (Edit)
                    .choice
                        p.col-sm-3 Full Name:
                        p.col-sm-9 #{fullName ? grind : 'none'}
                    .choice
                        p.col-sm-3 Address:
                        p.col-sm-9 #{addressLine1 ? grind : 'none'}
                    .choice
                        p.col-sm-3 Address 2:
                        p.col-sm-9 #{addressLine2 ? grind : 'none'}
                    .choice
                        p.col-sm-3 City:
                        p.col-sm-9 #{city ? grind : 'none'}
                    .choice
                        p.col-sm-3 State:
                        p.col-sm-9 #{state ? grind : 'none'}
                    .choice
                        p.col-sm-3 Zip:
                        p.col-sm-9 #{zipCode ? grind : 'none'}
                    .choice.delivery
                        p.col-sm-3 Next Delivery:
                        p.col-sm-9 #{deliveryDate ? grind : 'none'}
            #btn-wrap
                input.btn.btn-danger.btn-lg(type="submit", name="submit", value="Cancel My Account") 