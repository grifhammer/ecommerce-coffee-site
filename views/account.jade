extends layout

block content
    #account.container
        #account-wrapper
            h1 Your account information
            #information-wrap
                .section-wrap.row
                    .section-header-wrap.col-sm-12
                        h2 Choices
                        a(href='/choices') (Edit)
                    .choice.col-sm-12
                        p.col-sm-3 Grind
                        p.col-sm-9 #{grind ? grind : 'None Selected'}
                    .choice.col-sm-12
                        p.col-sm-3 Freqency of Delivery
                        p.col-sm-9 #{frequency ? frequency : 'None Selected'}
                    .choice.col-sm-12
                        p.col-sm-3 Coffee, in Pounds
                        p.col-sm-9 #{pounds ? pounds : 'None Selected'}
                .section-wrap.row
                    .section-header-wrap.col-sm-12
                        h2 Delivery Information
                        a(href='/delivery') (Edit)
                    .choice.col-sm-12
                        p.col-sm-3 Full Name
                        p.col-sm-9 #{fullName ? fullName : ''}
                    .choice.col-sm-12
                        p.col-sm-3 Address
                        p.col-sm-9 #{addressLine1 ? addressLine1 : ''}
                    .choice.col-sm-12
                        p.col-sm-3 Address 2
                        p.col-sm-9 #{addressLine2 ? AddressLine2 : ''}
                    .choice.col-sm-12
                        p.col-sm-3 City
                        p.col-sm-9 #{city ? city : ''}
                    .choice.col-sm-12
                        p.col-sm-3 State
                        p.col-sm-9 #{state ? state : ''}
                    .choice.col-sm-12
                        p.col-sm-3 Zip
                        p.col-sm-9 #{zipCode ? zipCode : ''}
                    .choice.delivery.col-sm-12
                        p.col-sm-3 Next Delivery
                        p.col-sm-9 #{deliveryDate ? deliveryDate : '12/12/12'}
            #btn-wrap
                input.btn.btn-danger.btn-lg(type="submit", name="submit", value="Cancel My Account") 